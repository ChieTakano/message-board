<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
<form class="new_message" id="new_message" action="/messages" accept-charset="UTF-8" method="post">

  名前:
  <input type="text" name="message[name]" id="message_name" />

  <textarea class="form-control" rows="3" type="text" name="message[body]" id="message_body" placeholder="内容をお書きください" ></textarea>

  <input type="submit" name="commit" value="Create Message" />
  
<% end %>